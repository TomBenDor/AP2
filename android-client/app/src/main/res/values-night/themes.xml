<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaKore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_dark</item>
        <item name="colorPrimaryVariant">@color/night_bright</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_bright</item>
        <item name="colorSecondaryVariant">@color/night_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Button color -->
        <item name="colorButtonNormal">@color/night_bright</item>
    </style>

    <style name="Theme.MaKore.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>